                    <ul class="topboard-items clearfix">

                        {{#each NhaSX}}

                            <li class="clearfix">
                                <div class="item-info">
                                    <h3 class="item-title"><a href="../../tim-kiem/theo-NhaSX/?id={{Code}}">{{Name}}</a></h3>
                                </div>
                            </li>
                        {{/each}}

                    </ul>
                </div>
