 {{#section 'js'}}
<script type="text/javascript">
    var validate = function () {
        if ($('#txtUsername').val().length === 0) {
            alert('Vui lòng nhập tên đăng nhập');
            return false;
        }
        if ($('#txtPWD').val().length < 6) {
            alert('Mật khẩu ít nhất 6 kí tự');
            return false;
        }
        if ($('#txtPWD').val() !== $('#txtCPWD').val()) {
            alert('2 mật khẩu không trùng nhau');
            return false;
        }
        if ($('#lname').val().length === 0){
            alert('Vui lòng nhập đầy đủ họ và tên');
            return false;
        }
        if ($('#miname').val().length === 0) {
            alert('Vui lòng nhập đầy đủ họ và tên');
            return false;
        }
        if ($('#fname').val().length === 0) {
            alert('Vui lòng nhập đầy đủ họ và tên');
            return false;
        }
        if ($('#addr').val().length ===0){
            alert('Vui lòng nhập địa chỉ liên lạc');
            return false;
        }
        if ($('#phone').val().length ===0){
            alert('Vui lòng nhập số điện thoại liên lạc');
            return false;
        }
        if ($('#mail').val().length ===0){
            alert('Vui lòng nhập email');
            return false;
        }
        return true;
    }
</script> 

