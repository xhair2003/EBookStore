<script type="text/javascript">

    var validate = function () {
        if ($('#name').val().length === 0) {
            alert('Vui lòng nhập tên sách');
            return false;
        }
        if ($('#giaban').val().length === 0) {
            alert('Vui Lòng nhập giá sách');
            return false;
        }
        if ($('#ma').val().length === 0) {
            alert('Vui lòng nhập tên tác giả');
            return false;
        }
        if ($('#soluong').val().length === 0) {
            alert('Vui lòng nhập số lượng sách');
            return false;
        }
        if ($('#nhaxuatban').val() === '0') {
            alert('Vui lòng chọn nhà xuất bản');
            return false;
        }
        if ($('#loaisach').val() === '0') {
            alert('Vui lòng chọn thể loại sách');
            return false;
        }
        if ($('#loaisach').val() == 1 && $('#addrsave').val().length===0) {
            alert('Vui lòng nhập  địa chỉ cho sách điện tự');
            return false;
        }

        if ($('#file').val().length === 0) {
            alert('Vui lòng chọn hình ảnh hiển thị');
            return false;
        }
        if ($('#mota').val().length === 0) {
            alert('Vui lòng viết mô tả cho sách');
            return false;
        }
        return true;
    }
    function yearFunction() {
  var d = new Date();
  return d.getFullYear();
}
</script> {{/section}} {{#if Success}}
