<div class="login">
    <div class="login-title" style="margin-left: 520px">

        <h3 style="color: #0f8edd">Thêm mới sản phẩm</h3>

    </div>
    <div>
        <form method="POST"  enctype="multipart/form-data" role="form" onsubmit="return validate();">
            <div class="mod-login">
                <div class="mod-login-col1" style="width: 350px;">
                    <div class="mod-input mod-login-input-name mod-input-name">
                        <td style="font-size: 14px">Mã ISBN {{isbn}}</td>
                    <input type="hidden" placeholder="{{isbn}}" data-meta="Field" name="ma" id="ma"value={{isbn}}>
                        <b></b>
                        <span></span>
                    </div>
                    <div class="mod-input">
                        <label style="font-size: 14px">Tên Sách</label>
                        <input type="text" placeholder="Nhập tên sách" data-meta="Field" name="name" id="name">
                        <b></b>
                        <span></span>

                    </div>

                    <div class="mod-input">
                        <label style="font-size: 14px">Năm xuất bản</label>
                        <input type="number" min='0'  onkeyup="if(this.value<0){this.value= 0} else if (this.value>yearFunction()) {this.value=yearFunction()}" placeholder="Nhập tên sách" data-meta="Field" name="year" id="year">
                        <label style="font-size: 14px">Lần xuất bản</label>
                        <input type="number" min='0'  onkeyup="if(this.value<0){this.value= 0}"  placeholder="Lần xuất bản" data-meta="Field" name="time" id="times">
                        <b></b>
                        <span></span>

                    </div>

                    <div class="mod-input">
                        <label style="font-size: 14px">Nhà xuất bản</label>
                        <select name="idNhaSX" class="form-control" style="border: 1px solid #5bb7c3;border-radius: 36px;font-size: 14px;height: 40px;"
                            id="nhaxuatban">
                            <option value="0">Chọn nhà xuất bản</option>
                            {{#each nxb}}
                            <option value="{{Name}}">{{Name}}</option>
                            {{/each}}
                        </select>
                        <span></span>

                    </div>
                    <div class="mod-input">
                        <label style="font-size: 14px">Chọn ảnh hiển thị</label>

                        <input type="file" name="file" id="file">
                    </div>
                </div>
                <div class="mod-login-col2" style="width: 350px;">
                    <div class="mod-input">
                        <label style="font-size: 14px">Giá sách</label>
                        <input type="number" placeholder="Nhập giá sách" data-meta="Field" name="giaBan" id="giaban">
                        <b></b>
                        <span></span>

                    </div>
                    <div class="mod-input">
                        <label style="font-size: 14px">Số lượng</label>
                        <input type="number" placeholder="Nhập giá sách" data-meta="Field" name="sl" id="soluong">
                        <b></b>
                        <span></span>

                    </div>

                    <div class="mod-input">
                        <label style="font-size: 14px">Loại sách</label>
                        <select name="idLoai" class="form-control" style="border: 1px solid #5bb7c3;border-radius: 16px;font-size: 14px;height: 40px;"
                            id="loaisach">
                            <option value="0">Chọn loại sách</option>
                            {{!-- {{#each loai}} --}}
                            <option value=2>Sách bản in</option>
                            <option value=1>Sách điện tử</option>
                            {{!-- {{/each}} --}}
                        </select>
                        <span></span>
                        </div>
                        <div class="mod-input">
                            <label style="font-size: 14px">Địa chỉ lưu trữ</label>
                            <input type="text" placeholder="Nhập địa chỉ lưu trữ sách điện tử" data-meta="Field" name="addrsave" id="addrsave">
                            <b></b>
                            <span></span>

                        </div>
                    
                    <div class="mod-input">
                        <label style="font-size: 14px">Mô tả</label>
                        <input type="text" placeholder="Nhập mô tả sách" data-meta="Field" name="moTa" id="mota">
                        <b></b>
                        <span></span>

                    </div>
                </div>



            </div>
            <div class="form-row subscribe-outer" style="width: 18%;margin-left: 300px;margin-top: -40px">
                <button type="submit" class="button-default ygradient1 ">Thêm mới</button>
                <a href="./">
                    <button type="button" class="button-default ygradient1 ">Quay lại</button>
                </a>
            </div>
        </form>
    </div>
</div>