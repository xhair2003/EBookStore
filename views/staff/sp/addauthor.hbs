<script type="text/javascript"> 
var validate1 = function () {
        if ($('#ssn').val().length === 0){
            alert('Vui lòng nhập mã định danh cho tác giả');
            return false;
        }
        if ($('#lname').val().length === 0){
            alert('Vui lòng nhập đầy đủ họ và tên');
            return false;
        }
        if ($('#mname').val().length === 0) {
            alert('Vui lòng nhập đầy đủ họ và tên');
            return false;
        }
        if ($('#fname').val().length === 0) {
            alert('Vui lòng nhập đầy đủ họ và tên');
            return false;
        }
        if ($('#address').val().length ===0){
            alert('Vui lòng nhập địa chỉ liên lạc');
            return false;
        }
        if ($('#phone').val().length ===0){
            alert('Vui lòng nhập số điện thoại liên lạc');
            return false;
        }
        if ($('#email').val().length ===0){
            alert('Vui lòng nhập email');
            return false;
        }
        return true;
    }

var validate2=function(){
    if ($('#author').val() === '0') {
            alert('Vui lòng tác giả');
            return false;
        }
        return true;
}
var validate3=function(){
    if ($('#theloai').val().length === 0) {
            alert('Vui lòng nhập thể loại');
            return false;
        
    }
    return true;
}
var validate4=function(){
    if ($('#key').val() === '0') {
            alert('Vui lòng từ khóa cho sách');
            return false;
        }
        return true;
}
$(document).ready(function() {
        $("#bbb").click(function(){
            if (!validate1()) return;
            var a={type: 2,
            ssn:$('#ssn').val(),
            fname:$('#fname').val(),
            mname :$('#mname').val(),
            lname :$('#lname').val(),
            sex :$('#sex').val(),
            address :$('#address').val(),
            phone :$('#phone').val(),
            email :$('#email').val(),
            isbn:$('#isbn').val()
            }
           $.ajax({
            method: "POST",
            url:'/staff/book/addauthor',
            data: JSON.stringify(a),
            dataType: 'json',
            processData: false,
            contentType: "application/json; charset=utf-8",
            success: function(data){
            alert(data.test);
            }
            });
            
        });
        $("#write").click(function(){
            if (!validate2())return ;
            var a={type:1,SSN:$('#author').val(),isbn:$('#isbn').val()}
           $.ajax({
            method: "POST",
            url:'/staff/book/addauthor',
            data: JSON.stringify(a),
            dataType: 'json',
            processData: false,
            contentType: "application/json; charset=utf-8",
            success: function(data){
            alert(data.test);
            }
            });
        });
        $("#btl").click(function(){
            if (!validate3())return;
            var a={type:3,isbn:$('#isbn').val(),field:$('#theloai').val()}
            $.ajax({
                method: "POST",
                url:'/staff/book/addauthor',
                data: JSON.stringify(a),
                dataType: 'json',
                processData: false,
                contentType: "application/json; charset=utf-8",
                success: function(data){
                alert(data.test);
            }
            });
        });
        $("#bkey").click(function(){
            if (!validate4())return;
            var a={type:4,isbn:$('#isbn').val(),key:$('#key').val().toLowerCase()}
            $.ajax({
                method: "POST",
                url:'/staff/book/addauthor',
                data: JSON.stringify(a),
                dataType: 'json',
                processData: false,
                contentType: "application/json; charset=utf-8",
                success: function(data){
                alert(data.test);
            }
            });
        });
});

</script> {{/section}}
